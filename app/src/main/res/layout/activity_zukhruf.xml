<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zukhruf">


    <ImageView
        android:id="@+id/img_photo"
        android:src="@drawable/zukhruf"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="Moch Zukhruf Ain"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="200dp"
        android:text="Moch Zukhruf Ain adalah Seorang mahasiswa Universitas Tadulako
Fakultas Teknik Program Studi S1 Teknik Informatika yang saat ini sudah berada di semester 3
dia berasal dari Parimo"
        android:textAlignment="center"/>
</RelativeLayout>